{# src/Trenndal/SnowtricksBundle/Resources/views/Default/page.html.twig #}

<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		{% block title %}<title>{{title|default('Snowtricks')}}</title>{% endblock %}

		{% block stylesheets %}
			<link rel="stylesheet" href="{{asset('web/css/bootstrap.min.css')}}" >
			
			<link rel="stylesheet" href="{{asset('web/css/style.css')}}" >
			<link href="{{asset('web/css/grayscale.min.css')}}" rel="stylesheet">
			
			<!-- Custom fonts for this template -->
			<link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
			<link href="https://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">
			
			
			<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
			<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
			<!--[if lt IE 9]>
				<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
				<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
			<![endif]-->
		{% endblock %}
	</head>
	<body id="page-top">

		<!-- Navigation -->
		<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
		  <div class="container">
		{% block navlist %}
			<a class="navbar-brand js-scroll-trigger" href="{{asset('/#page-top')}}">{{site.title|default('Snowtricks')}}</a>
			<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
				Menu
				<i class="fa fa-bars"></i>
			</button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="{{asset('/#about')}}">About</a>
					</li>
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="{{asset('/tricks/')}}">Tricks</a>
					</li>
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="{{asset('/#contact')}}">Contact</a>
					</li>
					{% if is_granted("ROLE_USER") %}
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="{{ logout_path('main') }}">Logout</a>
					</li>
					{% else %}
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="{{asset('/login')}}">Login</a>
					</li>
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="{{asset('/registration')}}">Sign Up</a>
					</li>
					{% endif %}
				</ul>
			</div>
		  </div>
		  {% endblock %}
		</nav>
		
		{% block header %}
		<div class="tagline-upper text-center text-heading text-shadow text-white mt-5  d-lg-block" style="padding-top:150px;">{{title|default('Snowtricks')}}</div>
		<div class="tagline-lower text-center text-expanded text-shadow text-uppercase text-white mb-5  d-lg-block">{{subtitle|default('Listing all snowtricks !')|raw}}</div>
		{% endblock %}
		
		<div class="container">
			{% block main %}
			
			
			
			{% endblock %}
		</div>
    <!-- /.container -->

    <footer class="bg-faded text-center py-5">
      <div class="container">
        <p class="m-0">Copyright &copy; Your Website 2017</p>
      </div>
    </footer>

				
			</div>
			
		</div>
		
		
		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
			<script src="{{asset('web/js/jquery.easing.min.js')}}"></script>
			<script src="{{asset('web/js/grayscale.js')}}"></script>
			<script src="{{asset('web/js/bootstrap.bundle.min.js')}}"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
		{% endblock %}
	</body>
</html>
