{# src/Trenndal/SnowtricksBundle/Resources/views/Default/registration.html.twig #}
{% extends 'templates/page.html.twig' %}

{% block main %}

	
	{% for error in errors %}
		<div class="bg-faded p-4 my-4">
			<div class="alert alert-danger">{{ error }}</div>
		</div><br />
	{% endfor %}

	<div class="bg-faded p-4 my-4">
		{% if user_name is not null %}
			<h2>Modify your account : {{user_name}}</h2>
		{% else %}
			<h2>Create your account</h2>
		{% endif %}
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(form) }}
			<div class="row">
				{% if user_name is not null %}
					<div class="form-group col-lg-12" style="visibility:hidden;">
						{{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
					</div>
				{% else %}
					<div class="form-group col-lg-12">
						{{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
					</div>
				{% endif %}
				<div class="form-group col-lg-12">
					{{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col-lg-12">
					{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col-lg-12">
					{{ form_row(form.file, {'attr': {'class': 'form-control'}}) }}
				</div>
				<br />
				<div class="form-group col-lg-12">
					{{ form_widget(form.save, {'attr': {'class': 'btn btn-secondary'}}) }}
				</div>
			</div>
		{{ form_rest(form) }}
		
		{{ form_end(form) }}
	</div>
	
	
{% endblock %}

