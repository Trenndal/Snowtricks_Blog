{# src/Trenndal/SnowtricksBundle/Resources/views/Default/login.html.twig #}
{% extends 'templates/page.html.twig' %}

{% block main %}

	{% if error is not null %}
		<div class="bg-faded p-4 my-4">
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		</div><br />
	{% endif %}

	<div class="bg-faded p-4 my-4 text-center">
		<form action="{{ path('login_check') }}"  method="post">
			<div class="row">
				<div class="form-group col-lg-12">
					<label for="username" class="text-heading">Login :</label>
					<input type="text" class="form-control" id="username" value="{{ last_username }}" name="_username" />
				</div>
				<div class="form-group col-lg-12">
					<label for="password" class="text-heading">Password :</label>
					<input type="password" class="form-control" id="password" name="_password" />
				</div>
				<br />
				<div class="form-group col-lg-12">
					<input type="hidden" name="_target_path" value="{{last_path}}" />
					<input type="submit" class="btn btn-secondary" value="Connexion" />
				</div><br /><br />
				<div class="form-group col-lg-12">
					<a  href="{{path('registration')}}"  >Register</a><br />
					<a  href="{{path('reset')}}"  >Forgot password ?</a>
				</div>
			</div>
		</form>
	</div><br /><br />
	
	
{% endblock %}

