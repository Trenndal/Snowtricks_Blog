{# src/Trenndal/SnowtricksBundle/Resources/views/Default/tricks.html.twig #}
{% extends 'templates/page.html.twig' %}

{% block main %}
	
	<div class="bg-faded p-4 my-4">
		<ul class="pagination justify-content-center mb-0">
			<li class="page-item ">
				<a class="btn btn-outline-primary btn-lg btn-block" href="/edit/0" role="button">Create new trick</a>
			</li>
		</ul>
	</div>
	
	{% for trick in tricks %}
		<div class="bg-faded p-4 my-4">
			<div class="card card-inverse">
				{% if trick.thumbnail is not null %}<img class="card-img img-fluid w-100" src="{{asset(trick.thumbnail.webPath)}}" alt="{{trick.thumbnail.alt}}">{% endif %}
				<div class="card-img-overlay bg-overlay">
					<h2 class="card-title text-shadow text-white text-uppercase mb-0">{{trick.name}}</h2>
					<h4 class="text-shadow text-white">{{trick.date|date("F jS \\a\\t g:ia")}}</h4>
					<p class="lead card-text text-shadow text-white w-50 d-none d-lg-block">{{trick.description}}</p>
					<a href="#" class="btn btn-secondary">Read More</a>
				</div>
			</div>
		</div>
	{% else %}
		<div class="bg-faded p-4 my-4">
			<p class="pagination justify-content-center mb-0">No tricks found</p>
		</div>
	{% endfor %}
	
	<!-- Pagination -->
	<div class="bg-faded p-4 my-4">
		<ul class="pagination justify-content-center mb-0">
			<li class="page-item disabled">
				<a class="page-link" href="#">&larr; Older</a>
			</li>
			<li class="page-item disabled">
				<a class="page-link" href="#">1</a>
			</li>
			<li class="page-item disabled">
				<a class="page-link" href="#">Newer &rarr;</a>
			</li>
		</ul>
	</div>
{% endblock %}

